generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MODERATOR
  USER
}

enum SeriesType {
  MANGA
  MANHWA
  MANHUA
}

enum SeriesStatus {
  ONGOING
  COMPLETED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  username      String    @unique
  passwordHash  String
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  profile       Profile?
  favorites     Favorite[]
  follows       Follow[]
  comments      Comment[]
  ratings       Rating[]
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  avatarUrl String?
  bio       String?
  social    Json?
  user      User     @relation(fields: [userId], references: [id])
}

model Series {
  id          String        @id @default(uuid())
  title       String
  description String
  coverUrl    String
  type        SeriesType
  status      SeriesStatus
  country     String
  views       Int           @default(0)
  createdAt   DateTime      @default(now())
  chapters    Chapter[]
  ratings     Rating[]
}

model Chapter {
  id        String   @id @default(uuid())
  seriesId  String
  number    Float
  title     String?
  views     Int      @default(0)
  published DateTime @default(now())
  series    Series   @relation(fields: [seriesId], references: [id])
  comments  Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  body      String
  userId    String
  chapterId String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  chapter   Chapter  @relation(fields: [chapterId], references: [id])
}

model Rating {
  id       String  @id @default(uuid())
  score    Int
  userId   String
  seriesId String
  user     User    @relation(fields: [userId], references: [id])
  series   Series  @relation(fields: [seriesId], references: [id])
}

model Favorite {
  id       String @id @default(uuid())
  userId   String
  seriesId String
  user     User   @relation(fields: [userId], references: [id])
  series   Series @relation(fields: [seriesId], references: [id])
}

model Follow {
  id       String @id @default(uuid())
  userId   String
  seriesId String
  user     User   @relation(fields: [userId], references: [id])
  series   Series @relation(fields: [seriesId], references: [id])
}
